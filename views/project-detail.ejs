<!DOCTYPE html>
<html lang="<%= lng %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title[lng] %> - Proje Detayı - Beezy Studio</title>
    <meta name="description" content="<%= project.short_description[lng] %>">
    
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="icon" type="image/png" href="/assets/images/beezy-logo.png">

</head>
<body class="bg-gray-900 text-white font-sans">

    <!-- Custom Cursor -->
    <div class="custom-cursor"></div>

    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Ana İçerik -->
    <main class="pt-32 pb-20">
        <div class="container mx-auto px-4">

            <!-- Proje Başlığı -->
            <div class="text-center mb-12 g-fade-up">
                <a href="/<%= lng %>/portfolio" class="text-amber-400 hover:underline mb-4 inline-block"><i class="fas fa-arrow-left"></i> <%= t('back_to_portfolio') %></a>
                <h1 class="text-5xl md:text-7xl font-bold tracking-tight"><%= project.title[lng] %></h1>
                <p class="text-xl text-gray-400 mt-4 max-w-3xl mx-auto"><%= project.short_description[lng] %></p>
            </div>

            <!-- Ana Görsel/Video -->
            <div class="mb-16 g-fade-up">
                <div class="aspect-w-16 aspect-h-9 bg-black rounded-xl overflow-hidden shadow-2xl shadow-amber-500/10">
                    <img src="<%= project.cover_image %>" alt="<%= project.title[lng] %>" class="w-full h-full object-cover">
                </div>
            </div>
            
            <!-- Proje Detayları -->
            <div class="grid md:grid-cols-3 gap-10 text-lg">
                <div class="md:col-span-2 g-fade-up">
                    <h2 class="text-3xl font-bold mb-4 text-amber-400"><%= t('project_summary') %></h2>
                    <p class="mb-4 text-gray-300"><%= project.detail_summary[lng] %></p>
                </div>
                <div class="g-fade-up">
                     <h2 class="text-3xl font-bold mb-4 text-amber-400"><%= t('technologies_used') %></h2>
                     <ul class="space-y-3">
                        <% project.technologies.forEach(tech => { %>
                            <li class="flex items-center"><i class="fas fa-check-circle text-green-500 mr-3"></i><%= tech %></li>
                        <% }); %>
                     </ul>
                </div>
            </div>
             <!-- Diğer Proje Görselleri (Opsiyonel) -->
            <div class="mt-20">
                <h2 class="text-4xl font-bold text-center mb-10 g-fade-up">Proje Galerisi</h2>
                <div class="grid md:grid-cols-2 gap-8">
                    <% if (project.gallery_images && project.gallery_images.length > 0) { %>
                        <% project.gallery_images.forEach(image => { %>
                            <div class="g-fade-up"><img src="/<%= image %>" class="rounded-lg w-full"></div>
                        <% }); %>
                    <% } else { %>
                        <div class="g-fade-up"><img src="https://placehold.co/800x600/0A0A0A/D4AF37?text=Galeri+1" class="rounded-lg w-full"></div>
                        <div class="g-fade-up"><img src="https://placehold.co/800x600/0A0A0A/D4AF37?text=Galeri+2" class="rounded-lg w-full"></div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- JS Dosyaları -->
    <%- include('partials/scripts') %>

</body>
</html> 