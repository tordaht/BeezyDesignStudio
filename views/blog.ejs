<!DOCTYPE html>
<html lang="tr" class="dark">
<head>
    <%- include('partials/head') %>
    <title>Blog - Beezy Design Studio</title>
</head>
<body class="bg-gray-900 text-gray-200 font-sans leading-normal tracking-wider">
    <%- include('partials/header') %>

    <main class="pt-32 pb-20">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16 g-fade-up">
                <h1 class="text-5xl md:text-7xl font-bold tracking-tight"><%= t('blog_title') %></h1>
                <p class="text-xl text-gray-400 mt-4 max-w-3xl mx-auto"><%= t('blog_subtitle') %></p>
            </div>

            <!-- Blog Yazıları Listesi -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="g-fade-up portfolio-item">
                            <div class="image-container group">
                                <a href="/<%= lng %>/blog/<%= post.id %>">
                                    <img src="<%= post.cover_image %>" alt="<%= post.title[lng] %>" class="w-full h-72 object-cover"/>
                                </a>
                                <div class="overlay">
                                    <a href="/<%= lng %>/blog/<%= post.id %>" class="portfolio-link"><%= t('read_article') %> <i class="fas fa-arrow-right"></i></a>
                                </div>
                            </div>
                            <div class="p-4">
                                <p class="text-sm text-amber-400"><%= new Date(post.publish_date).toLocaleDateString(lng, { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                <h3 class="text-2xl font-bold text-white mt-2"><%= post.title[lng] %></h3>
                                <p class="mt-2 text-gray-400"><%= post.summary[lng] %></p>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center col-span-full"><%= t('no_blog_posts') %></p>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>
</html> 